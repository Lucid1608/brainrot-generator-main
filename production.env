# Production Environment Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-production-key-change-this
DATABASE_URL=sqlite:///app.db

# Email configuration (configure these for your email provider)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# File upload configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
MAX_TEXT_LENGTH=5000

# Redis configuration (if using Redis for Celery)
REDIS_URL=redis://localhost:6379/0

# Stripe configuration (configure these for your Stripe account)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# AI and TTS API Keys (configure these for video generation)
GROQ_API_KEY=your-groq-api-key-here
SPEECHIFY_API_KEY=your-speechify-api-key-here

# Frontend URL
FRONTEND_URL=http://your-domain.com 